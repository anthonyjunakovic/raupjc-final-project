@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/_Layout.cshtml";
    ViewData["view_style"] = "css/index.css";
    ViewData["view_script"] = "js/index.js";
}

<div style="display: none;" id="indexCarousel" class="carousel carousel-fade fitToScreen" data-ride="carousel">
    <div class="carousel-inner fitToScreen">
        <div class="carousel-item fitToScreen active">
            <img class="imageFitToScreen" src="~/image/wallpaper/wallpaper_0.jpg" alt="" onload="onLoadImg()" >
        </div>
        <div class="carousel-item fitToScreen">
            <img class="imageFitToScreen" src="~/image/wallpaper/wallpaper_1.jpg" alt="" onload="onLoadImg()" >
        </div>
        <div class="carousel-item fitToScreen">
            <img class="imageFitToScreen" src="~/image/wallpaper/wallpaper_2.jpg" alt="" onload="onLoadImg()" >
        </div>
        <div class="carousel-caption centerCaption">
            <h1 style="text-shadow: 2px 2px 5px #1a1a1a;">Welcome to Pinboard</h1>
            <p>Pinboard is a network for sharing photos, links and thoughts with the community.</p>
            <a class="btn btn-primary indexButton" asp-action="SignUp" role="button">Sign Up</a>
            <a class="btn btn-secondary indexButton" asp-action="LogIn" role="button">Log In</a>
        </div>
    </div>
    <a class="carousel-control-prev d-none d-sm-none d-md-flex" href="#indexCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next d-none d-sm-none d-md-flex" href="#indexCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
