@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FinalProject.Models.UploadModel

@{
    Layout = "~/Views/_Layout.cshtml";
    ViewData["view_title"] = "Upload";
    ViewData["view_style"] = "css/upload.css";
}

<div id="msgModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Why is there no file dialog?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>There is no way to get the AzureStorage service for free. Despite the fact that I'm a student, the service could not be acquired for free (even with entering the credit card, it still requires payment).</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div style="position: absolute; top: 50%; left: 10%; right: 10%; transform: translate(0%, -50%)">
    <div style="margin-bottom: 100px"></div>
    <form asp-action="Upload">
        <h3 style="margin-bottom: 20px;">Post new image</h3>
        <input asp-for="Title" class="form-control" autocomplete="off" placeholder="Title" style="margin-bottom: 10px;" />
        <input asp-for="ImageURL" class="form-control" style="margin-bottom: 10px;" placeholder="Image URL" autocomplete="off" />
        <button type="button" class="btn btn-secondary buttons btn-lg" data-toggle="modal" data-target="#msgModal" style="height: 42px;">?</button>
        <input value="Upload" type="submit" class="btn btn-primary buttons float-right" style="height: 42px;" />
    </form>
</div>
